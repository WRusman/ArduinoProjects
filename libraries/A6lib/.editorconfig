# EditorConfig file: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = false

# 4 space indentation
[*.{cpp,h}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# 2 space indentation
[*.json]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
